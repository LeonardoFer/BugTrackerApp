@using Client.LayoutComponents
@using MudBlazor.Utilities
@inherits LayoutComponentBase

<MudThemeProvider Theme="CustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudGrid Class="d-flex justify-space-between">
            <MudItem Class="mt-3">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="((e) => DrawerToggle())"></MudIconButton>
                Bug Tracker
            </MudItem>
            <MudItem>
                <MudContainer>
                    <MudIcon Class="mt-6" Icon="@Icons.Material.Filled.LightMode" Size="Size.Medium"></MudIcon>
                    <MudSwitch Class="ml-4 mb-4" @bind-Checked="@_isDarkMode" Color="Color.Primary" T="bool"></MudSwitch>
                    <MudIcon Class="mt-6" Icon="@Icons.Material.Filled.ModeNight" Size="Size.Medium"></MudIcon>
                    <MudThemeProvider @bind-IsDarkMode="@_isDarkMode"/>
                </MudContainer>
            </MudItem>
        </MudGrid>
    </MudAppBar>
    <MudDrawer @bind-Open="@_isDrawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    // Logic to Open/Close Drawer Menu.
    bool _isDrawerOpen = true;

    void DrawerToggle()
    {
        _isDrawerOpen = !_isDrawerOpen;
    }
}

@code
{
    private bool _isDarkMode = true;
}

@code
{
    // Creating a Custom Theme.
    MudTheme CustomTheme = new MudTheme()
        {
            Palette = new Palette()
            {
                Primary = new MudColor(80, 125, 210, 255)
            },
            PaletteDark = new Palette()
            {
            },
            LayoutProperties = new LayoutProperties()
            {
                AppbarHeight = "50px",
                DrawerWidthLeft = "260px",
                DrawerWidthRight = "260px"
            }
        };
}